<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="#10000000" />
            <padding
                android:bottom="2dp"
                android:left="0.5dp"
                android:right="0.5dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="0.5dp"
        android:right="0.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <gradient
                android:angle="135"
                android:endColor="?attr/colorSurface"
                android:startColor="?attr/colorSurface" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke
                android:width="1dp"
                android:color="?attr/colorOutline" />
        </shape>
    </item>
</layer-list> 